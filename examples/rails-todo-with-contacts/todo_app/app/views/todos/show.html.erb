<h2>Task</h2>
<p>Name: <%= @todo.task %></p>
<p>Description: <%= @todo.description %></p>
<p>Due Date: <%= @todo.due_date %></p>
<p>Completed: <%= @todo.completed %></p>
<p>Contacts on the task:<br/> <% @todo.contacts.each do |contact| %>
    <%= contact.name %><br/> <%= button_to "remove contact", remove_todo_contact_path(@todo, user_id: contact.id) %>
  <% end %>
</p>

<p>Contacts not on the task</p>
<ul>
  <% @available_contacts.each do |contact| %>
  <li>
    <%= contact.name %> <%= button_to "add to todo", add_todo_contact_path(@todo, user_id: contact.id) %>
  </li>
  <% end %>
</ul>

<a href="/todos/<%= @todo.id %>/edit">Edit Task</a>
<br/><br/>
<form action="/todos/<%= @todo.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Task</button>
</form>